{
  "name": "fastypest",
  "version": "1.4.68",
  "description": "Restores the database automatically after each test. Allows serial execution of tests without having to delete and restore the database having to stop the application",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.20.3"
  },
  "packageManager": "yarn@4.3.1",
  "volta": {
    "node": "18.20.3",
    "yarn": "4.2.2"
  },
  "scripts": {
    "setup": "husky install",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "eslint": "eslint --fix",
    "test:ci": "jest --runInBand --forceExit --verbose --showSeed --config ./tests/jest.config.json",
    "test": "yarn build && yarn test:ci",
    "docker": "ts-node -r tsconfig-paths/register scripts/prepare-docker.ts",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juanjoGonDev/fastypest.git"
  },
  "lint-staged": {
    "*": "yarn eslint"
  },
  "keywords": [
    "typeorm",
    "test",
    "transaction",
    "rollback",
    "nestjs",
    "restore",
    "db",
    "speed",
    "up",
    "tests",
    "jest",
    "fastypest"
  ],
  "author": "juanjoGonDev",
  "license": "GPL",
  "bugs": {
    "url": "https://github.com/juanjoGonDev/fastypest/issues"
  },
  "homepage": "https://github.com/juanjoGonDev/fastypest#readme",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/cross-spawn": "^6.0.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.4",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "cross-spawn": "^7.0.6",
    "eslint": "^9.17.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.2.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.3.0",
    "mariadb": "^3.4.0",
    "mysql": "^2.18.1",
    "pg": "^8.13.1",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.20",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.19.0"
  },
  "peerDependencies": {
    "typeorm": "^0.3.20"
  }
}
