{
  "name": "fastypest",
  "version": "1.5.48",
  "description": "Restores the database automatically after each test. Allows serial execution of tests without having to delete and restore the database having to stop the application",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.20.3"
  },
  "packageManager": "yarn@4.8.1",
  "volta": {
    "node": "20.18.0",
    "yarn": "4.8.1"
  },
  "scripts": {
    "setup": "lefthook install",
    "prebuild": "rimraf dist",
    "build": "swc ./src -d ./dist --strip-leading-paths && tsc --emitDeclarationOnly --outDir dist && cpy \"src/**/*.json\" dist --parents && rimraf dist/src",
    "eslint": "eslint --fix",
    "test:ci": "jest --ci --runInBand --forceExit --verbose --showSeed --config ./tests/jest.config.json",
    "test": "yarn build && yarn test:ci",
    "docker": "ts-node -r tsconfig-paths/register scripts/prepare-docker.ts",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juanjoGonDev/fastypest.git"
  },
  "lint-staged": {
    "*": "yarn eslint"
  },
  "keywords": [
    "typeorm",
    "test",
    "transaction",
    "rollback",
    "nestjs",
    "restore",
    "db",
    "speed",
    "up",
    "tests",
    "jest",
    "fastypest"
  ],
  "author": "juanjoGonDev",
  "license": "GPL",
  "bugs": {
    "url": "https://github.com/juanjoGonDev/fastypest/issues"
  },
  "homepage": "https://github.com/juanjoGonDev/fastypest#readme",
  "dependencies": {
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@swc-node/jest": "^1.9.1",
    "@swc/cli": "^0.8.0",
    "@swc/core": "^1.15.13",
    "@swc/helpers": "^0.5.19",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.1",
    "@typescript-eslint/types": "8.56.0",
    "cpy-cli": "^6.0.0",
    "eslint": "^10.0.1",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.24.0",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-promise": "^7.2.1",
    "execa": "^9.6.1",
    "globals": "^17.3.0",
    "jest": "^30.2.0",
    "lefthook": "^2.1.1",
    "lint-staged": "^16.2.7",
    "mariadb": "^3.5.1",
    "mysql": "^2.18.1",
    "pg": "^8.18.0",
    "prettier": "^3.8.1",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.1.3",
    "standard-version": "^9.5.0",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.28",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  },
  "peerDependencies": {
    "typeorm": "^0.3.28"
  }
}
