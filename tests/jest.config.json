{
  "testEnvironment": "node",
  "rootDir": "../",
  "setupFilesAfterEnv": [
    "./tests/config/jest.setup.ts"
  ],
  "globalSetup": "./tests/config/global.setup.ts",
  "testRegex": ".spec.ts",
  "modulePaths": [
    "<rootDir>"
  ],
  "roots": [
    "<rootDir>/tests"
  ],
  "transform": {
    "^.+\\.tsx?$": [
      "@swc/jest",
      {
        "jsc": {
          "parser": {
            "syntax": "typescript",
            "tsx": false,
            "decorators": true
          },
          "target": "es2017",
          "transform": {
            "decoratorMetadata": true,
            "legacyDecorator": true
          }
        },
        "module": {
          "type": "commonjs"
        }
      }
    ]
  }
}
