{
  "testEnvironment": "node",
  "preset": "ts-jest",
  "rootDir": ".",
  "setupFilesAfterEnv": [
    "./config/jest.setup.ts"
  ],
  "globalSetup": "./config/global.setup.ts",
  "testRegex": ".spec.ts",
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "tsconfig": "tsconfig.json"
      }
    ]
  }
}
